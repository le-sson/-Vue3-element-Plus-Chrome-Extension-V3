{
	"manifest_version": 3,
	"version":"1.0.0", 	//发布版本号
	
	"name": "EtsyHunt - 插件名称",
	"description": "描述内容",
	"homepage_url": "https://etsyhunt.com/",
	"default_locale": "en",//"zh_CN",
	
	//开启需要的权限,需要在chrome发布后台申请
	"permissions": [
		"cookies"
		// "tabs",
		// "storage",
		// "bookmarks"
		// "contextMenus", // 右键菜单
		// "notifications", // 通知
	],
	
	//权限
	"host_permissions":[
		"*://*.etsyhunt.com/*"  
	],
	
	"icons": {
		"16": "img/icon16.png",
		"48": "img/icon48.png",
		"128": "img/icon128.png"
	},
	
	//注入页
	"content_scripts": [
		{
			"matches": ["*://*.etsyhunt.com/*"],
			"js": [
				"js/content.js"
				// "js/chunk-vendors.js"
			],
			"css": [
				"css/main.css", 
				"css/popup.css"
			],
			"run_at": "document_start" //代码注入的时间
		}
	],
	
	"background": {
		"service_worker": "js/background.js",
		"type": "module"
	},
	
	"action": {
		"default_icon": "img/icon48.png",
		"default_popup": "popup.html"
	},
	
	"web_accessible_resources": [{
		"resources": [],
		"matches": ["*://*.etsyhunt.com/*"]
	}],
	"content_security_policy": {
	   "extension_pages": "script-src 'self'; object-src 'self'; frame-src 'self'; child-src 'self'"
	}
}